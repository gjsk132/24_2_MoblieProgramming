<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assignment_2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="30dp"
                android:text="RESUME"
                android:textSize="30sp"/>

            <TextView
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="20dp"
                android:text="이력서"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e9ecef"
                android:padding="25dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:letterSpacing="0.4"
                        android:text="Name"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/engName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:letterSpacing="0.3"
                            android:textSize="15sp"
                            android:layout_marginBottom="15dp"
                            android:text="Eng-Name"/>

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:letterSpacing="0.1"
                            android:textSize="12sp"
                            android:text="email"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="3dp"
                            android:background="#868e96"/>

                        <TextView
                            android:id="@+id/phoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:letterSpacing="0.1"
                            android:textSize="12sp"
                            android:text="phone number"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="3dp"
                            android:background="#868e96"/>

                        <TextView
                            android:id="@+id/homepage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:letterSpacing="0.1"
                            android:textSize="12sp"
                            android:text="homepage"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="3dp"
                            android:background="#868e96"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/resumeImage"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:padding="30dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학력"
                    android:textSize="20sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="#868e96"/>

                <TableLayout
                    android:id="@+id/educationTable"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:stretchColumns="0,1,2"
                    android:layout_height="wrap_content">
                </TableLayout>

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경력"
                    android:textSize="20sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="#868e96"/>

                <TableLayout
                    android:id="@+id/careerTable"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:stretchColumns="0,1,2"
                    android:layout_height="wrap_content">
                </TableLayout>

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자격증"
                    android:textSize="20sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="#868e96"/>

                <TableLayout
                    android:id="@+id/certificationsTable"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:stretchColumns="0,1,2"
                    android:layout_height="wrap_content">
                </TableLayout>

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수상"
                    android:textSize="20sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="#868e96"/>

                <TableLayout
                    android:id="@+id/awardsTable"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:stretchColumns="0,1,2"
                    android:layout_height="wrap_content">
                </TableLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>